<!DOCTYPE html>
<html>
  <head>
    <title> BUZY </title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <link rel="shortcut icon" href="/public/images/favicon.png">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="/public/js/index.js"></script>
    <!--[if lt IE 9]>
     <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="/public/css/index.css">
  </head>

  <body>
    <header class="navbar navbar-static-top bs-docs-nav header" id="top" role="banner">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="../" class="navbar-brand" id='logo'>BUZY</a>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/login" id = "logsign">Login</a></li>
            <li><a href="/signup" id = "logsign">Signup</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container" style="margin-bottom:30px;">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-12">
          <span class="buzzy1">
            <b>What's buzzing around campus?</b>
          </span>
          <br>
          <input class='search' style = 'margin-top:8px;' placeholder=Search...><span style="position-top:5px;"class="fa fa-search fa-3x"></span>
        </div>
      </div>
    </div>
    <div class="results">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1 col-xs-12">
            <!-- now put in a row for each place that was found -->
            <% for (var i = 0; i < total/2; i++) {  %>
            <div class="row">
              <% for (var j = 0; j < total/2 + 1; j++) {  %>
                <div class="col-sm-5 card">
                  <b class="place_name"><%= places[i*j + j].name %></b><br>
                  <b class="place_address"><%= places[i*j + j].address %></b>
                  <br><br>
                  <div class='people_row' style = "text-align:center;"> 
                    <!-- loop over the score -->
                    <% for (var k = 0; k < places[i*j + j].score; k++) { %>
                      <div class="fa fa-male fa-5x person_dark person" data-score="<%=places[i*j + j].score%>" id="<%=k%>"></div>
                    <% } %>  
                    <!-- fill in the rest of the people -->
                    <% for (var k = places[i*j + j].score; k < 5; k++) { %>
                      <div class="fa fa-male fa-5x person_light person" data-score="<%=places[i*j + j].score%>" id="<%=k%>"></div>
                    <% } %>
                    <br>
                    <div class="last_update">last updated <%= timeSince[i*j + j] %> ago by <%= places[i*j + j].last_updater %> </div>          
                  </div>
                </div>
             <% } %>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

